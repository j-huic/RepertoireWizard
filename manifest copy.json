{
    "manifest_version": 2,
    "name": "Repertoire Helper",
    "version": "1.0",
    "description": "Adds functionality to the chessable tree explorer and lichess",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "page_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.htl",
        "default_title": ""
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["https://www.chessable.com/*"],
            "js": ["contentScript.js"]
        },
        {
            "matches": ["https://lichess.org/*"],
            "js": ["content.js"]
        }
    ]
}