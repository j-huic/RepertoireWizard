{
  "manifest_version": 3,
  "name": "Repertoire Helper",
  "version": "1.0",
  "description": "Adds functionality to the chessable tree explorer and lichess",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": ""
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.chessable.com/*"],
      "js": ["global.js"]
    },
    {
      "matches": ["https://www.chessable.com/explore/*"],
      "js": ["contentScript.js", "filter.js", "fetch.js"]
    },
    {
      "matches": ["https://www.chessable.com/analysis/*"],
      "js": ["analysisScript.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
